                <div className="h-2 w-2 rounded-full bg-[#24BEE1]"></div>
                Table of Contents
              </SheetTitle>
            </SheetHeader>

            <nav className="p-6" aria-label="Table of contents">
              <ul className="space-y-1" role="list">
                {items.map((item) => (
                  <li key={item.id} role="listitem">
                    <button
                      onClick={() => handleItemClick(item.id)}
                      className={cn(
